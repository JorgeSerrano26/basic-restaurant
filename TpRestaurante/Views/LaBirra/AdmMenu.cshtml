
@{
    ViewBag.Title = "AdmMenu";
}

<h2>AdmMenu</h2>

<head>
    <style>

        .contenedor-todo {
            display: inline-block;
            width: 340px;
            padding: 10px;
            position: relative;
        }

        .button {
            text-align: center;
            text-decoration: none;
            color: #9bc1ff;
            border: 1px solid #9bc1ff;
            transition: background 0.5s;
            background-color: white;
            display: block;
            padding: 5px 0px 5px 0px;
            width: 340px;
            margin-bottom: 5px;
        }

            .button:hover {
                color: white;
                background-color: #9bc1ff;
                text-decoration: none;
            }

            .button:visited .button {
                color: #9bc1ff;
                text-decoration: none;
            }

             .button:visited .button:hover {
                color: #fff;
                text-decoration: none;
             }
              #cont-menu {
            position: relative;
            width: 100%;
            height: 100%;
        }

        #contenedor {
            width:340px;
            background: #000;
            overflow: hidden;
            height: 200px;
            display: inline-block;
            margin-right: 5px;
        }

        #imagen {
            width: 100%;
            height: 200px;
            overflow: hidden;
            -webkit-transition: height .4s;
        }

            #imagen .foto {
                width: 100%;
                height: auto;
                -webkit-transition: height .4s;
            }

        .info {
            padding: 10px;
            width: 100%;
            height: 0px;
            background: #2c3f52;
            -webkit-transition: height .4s;
        }
        /* HOVER */
        #contenedor:hover #imagen {
            height: 120px;
        }

        #contenedor:hover .info {
            height: 80px;
        }

        #contenedor a {
            text-decoration: none;
            color: white;
        }

        #titulo::after {
            margin-left: auto;
            margin-right: auto;
            content: "";
            display: block;
            height: 3px;
            background: #606468;
            width: 40%;
            min-width: 140px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

    </style>
</head>

@using TpRestaurante.Models;

<div id="cont-menu">
    @{
        foreach (Menu List in ViewBag.ListaMenu)
        {
            <div class="contenedor-todo">
                <div id="contenedor">
                    <a id="imagen-link" href="~/Content/img/@List.Imagen">
                        <div id="imagen"> <img class="foto" src="~/Content/img/@List.Imagen" alt="Alternate Text" /></div>
                        <div class="info">
                            <p style="font-size:20px;color:white;">@List.Nombre - $@List.Precio</p>
                        </div>
                    </a>
                </div>
                <a href="@Url.Action("ModificarMenu","LaBirra", new { IdMenu = List.IdMenu })" class="button">Modificar &raquo;</a>
                <a href="@Url.Action("EliminarMenu","LaBirra", new { IdMenu = List.IdMenu })" class="button">Eliminar &raquo;</a>
            </div>
        }
    }
</div>
