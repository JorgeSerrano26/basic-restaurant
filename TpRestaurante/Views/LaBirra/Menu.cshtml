
@{
    ViewBag.Title = "Menu";
}

<div id="titulo">
    <h2 style="text-align:center;">Menu</h2>
</div>

@using TpRestaurante.Models
<head>
    <style>
                #cont-menu {
                    position: relative;
                    width: 100%;
                    height: 100%;
                }
                #contenedor {
                    width: 25%;
                    background: #000;
                    overflow: hidden;
                    height: 200px;
                    display: inline-block;
                    margin-right: 5px;
                }

                #imagen {
                    width: 100%;
                    height: 200px;
                    overflow: hidden;
                    -webkit-transition: height .4s;
                }

                #imagen .foto {
                    width: 100%;
                    height: auto;
                    -webkit-transition: height .4s;
                }

                .info {
                    padding: 10px;
                    width: 100%;
                    height: 0px;
                    background: #2c3f52;
                    -webkit-transition: height .4s;
                }
                /* HOVER */
                #contenedor:hover #imagen {
                    height: 120px;
                }

                #contenedor:hover .info {
                    height: 80px;
                }

                #contenedor a {
                    text-decoration: none;
                    color: white;
                }
                #titulo::after{
            margin-left: auto;
            margin-right: auto;
            content: "";
            display: block;
            height: 3px;
            background: #606468;
            width: 40%;
            min-width: 140px;
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </style>
</head>

<div id="cont-menu">
    @{
        foreach (Menu List in ViewBag.ListaMenu)
        {
            <div id="contenedor">
                <a id="imagen-link" href="~/Content/img/@List.Imagen">
                    <div id="imagen"> <img class="foto" src="~/Content/img/@List.Imagen" alt="Alternate Text" /></div>
                    <div class="info">
                        <p style="font-size:20px;color:white;">@List.Nombre - $@List.Precio</p>
                    </div>
                </a>
            </div>
        }
    }
</div>

